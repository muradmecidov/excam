@model UpdateTeamMembersVM
@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid pt-4 px-4">
<div class="row g-4">
<div class="col-sm-12 col-xl-6">
 <div class="bg-secondary rounded h-100 p-4">
                             <div asp-validation-summary="ModelOnly"></div>
                            <form method = "post" enctype="multipart/form-data">

                            <h6 class="mb-4">Create Team Member</h6>
                            <div class="form-floating mb-3">
                                <input asp-for="Fullname" class="form-control" >
                                <label asp-for="Fullname">Fullname</label>
                                <span asp-validation-for="Fullname"></span>
                            </div>
                              <div class="form-floating mb-3">
                                <input asp-for="Information" class="form-control" >
                                <label asp-for="Information">Information</label>
                                <span asp-validation-for="Information"></span>

                            </div>
                               <div class="form-floating mb-3">
                                <input asp-for="JobDescription" class="form-control" >
                                <label asp-for="JobDescription">JobDescription</label>
                            <span asp-validation-for="JobDescription"></span>

                            </div>
                           <div class="mb-3">
                                <label asp-for="Photo">Photo</label>
                                <input asp-for="Photo" class="form-control bg-dark" >
                                <span asp-validation-for="Photo"></span>

                            </div>
                            <button type="submit" class="btn btn-primary" >Create</button>
                           </form>
 </div>
 </div>
 </div>
 </div>
