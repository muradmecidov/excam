@model List<TeamMember>
@{
	ViewData["Title"] = "Index";
	int count = 1;
}
  
                <div class="container-fluid pt-4 px-4">
				  <div class="row g-4">
                      <div class="col-12">
						  <div>
							 <a asp-area="Admin" asp-controller="TeamMembers" asp-action="Create" type="submit" class="btn btn-outline-success">Create</a>
						  </div>
						<div class="bg-secondary rounded h-100 p-4">
							<h6 class="mb-4">Responsive Table</h6>
							<div class="table-responsive">
								<table class="table">
									<thead>
										<tr>
											<th scope="col">#</th>
											<th scope="col">Fullname</th>
											<th scope="col">JobDescription</th>
											<th scope="col">Information</th>
											<th scope="col">Photo</th>
										</tr>
									</thead>
									<tbody>
										
											@foreach (var item in Model)
							         	{
											<tr>
									        <th scope="row">@count</th>
									        <td>@item.Fullname</td>
									        <td>@item.JobDescription</td>
									        <td>@item.Information</td>
												<td><img src="~/assets/img/team/@item.ImagePath" alt="image" height="150"/></td>
											<td>
														<a asp-area="Admin" asp-controller="TeamMembers" asp-action="Update"  asp-route-Id="@item.Id" class="btn btn-outline-warning">Update</a>

														<a asp-area="Admin" asp-controller="TeamMembers" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger">Delete</a>

											</td>
										</tr>
									    count++;
							        	}
										
								
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
